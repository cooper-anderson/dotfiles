#!/bin/bash

cp -r ~/.config ~/.config_old
rm ~/.config/alacritty; ln -s alacritty/ ~/.config/alacritty
rm ~/.config/bash; ln -s bash/ ~/.config/bash
rm ~/.config/compton; ln -s compton/ ~/.config/compton
rm ~/.config/fish; ln -s fish/ ~/.config/fish
rm ~/.config/git; ln -s git/ ~/.config/git
rm ~/.config/htop; ln -s htop/ ~/.config/htop
rm ~/.config/i3; ln -s i3/ ~/.config/i3
rm ~/.config/nvim; ln -s nvim/ ~/.config/nvim
rm ~/.config/ptpython; ln -s ptpython/ ~/.config/ptpython
rm ~/.config/rofi; ln -s rofi/ ~/.config/rofi
rm ~/.config/tmux; ln -s tmux/ ~/.config/tmux

mkdir ~/.install

